---
import Layout from './default.astro'

const { content } = Astro.props
---
<Layout {...Astro.props}>
  <div class="mb-4 mx-auto max-w-prose">
    <h1
      class="
        mb-2
        text-4xl
        text-primary font-semibold
      "
    >
      { content.title }
    </h1>
  </div>

  <article class="prose mx-auto">
    <slot />
  </article>
</Layout>
