---
import Layout from '@/layouts/default.astro'
import PostPreviewList from '@/components/PostPreviewList.astro'

const rawPosts = Astro.fetchContent('./blog/*.*')
const posts = rawPosts.sort((a, b) => {
  a = new Date(a.date)
  b = new Date(b.date)
  return b - a
})
---
<Layout>
  <PostPreviewList posts={posts} />
</Layout>
